#!/usr/bin/env bash

# Check if AW_DIR is set
if [ -z "$AW_DIR" ]; then
    echo "Error: AW_DIR environment variable is not set"
    echo "Usage: AW_DIR=\$(pwd) ./run"
    exit 1
fi

echo "Select script to run:"
scripts=(./scripts/*)
select script in "${scripts[@]}"; do
    if [ -n "$script" ]; then
        echo "Running ${script}"
        "$script"
        break
    else
        echo "Invalid selection"
    fi
done
